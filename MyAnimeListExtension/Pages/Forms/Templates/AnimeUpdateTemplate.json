{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Update Anime status",
      "wrap": true,
      "style": "heading",
      "horizontalAlignment": "Center"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "Watching",
                  "value": "watching"
                },
                {
                  "title": "Completed",
                  "value": "completed"
                },
                {
                  "title": "On-hold",
                  "value": "on_hold"
                },
                {
                  "title": "Dropped",
                  "value": "dropped"
                },
                {
                  "title": "Plan to watch",
                  "value": "plan_to_watch"
                }
              ],
              "id": "status",
              "placeholder": "Add to List",
              "label": "Status"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "choices": [
                {
                  "title": "(10) Masterpiece",
                  "value": "10"
                },
                {
                  "title": "(9) Great",
                  "value": "9"
                },
                {
                  "title": "(8) Very good",
                  "value": "8"
                },
                {
                  "title": "(7) Good",
                  "value": "7"
                },
                {
                  "title": "(6) Fine",
                  "value": "6"
                },
                {
                  "title": "(5) Average",
                  "value": "5"
                },
                {
                  "title": "(4) Bad",
                  "value": "4"
                },
                {
                  "title": "(3) Very bad",
                  "value": "3"
                },
                {
                  "title": "(2) Horrible",
                  "value": "2"
                },
                {
                  "title": "(1) Appailing",
                  "value": "1"
                }
              ],
              "id": "score",
              "placeholder": "Select",
              "label": "Score"
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Input.Number",
              "id": "episodes",
              "label": "Episodes"
            }
          ]
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Update"
        }
      ]
    }
  ]
}